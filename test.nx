/*
  Prints an array of integers !
*/
void printGrid(int[] array, int nbColumns)
{
	let i = 1;
	for (case in array)
	{
		$print(case);
		if (i % nbColumns == 0)
		{
			$println("");
			i = 0;
		}
		
		i = i+1; // todo implement i++
	}
}

int main()
{
	let gridInfo = $getGridInfo();

	$println("nbColumns : ", gridInfo.nbColumns);
	//$println("nbLines : ", gridInfo.nbLines);

    printGrid(gridInfo.grid, gridInfo.nbColumns);

	$moveRight();

	let gridInfo2 = $getGridInfo();

	$println("nbColumns : ", gridInfo2.nbColumns);
	$println("nbLines : ", gridInfo2.nbLines);

    printGrid(gridInfo2.grid, gridInfo2.nbColumns);

    return 0;
}